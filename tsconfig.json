{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"outDir": "./dist",
		"target": "es5",
		"module": "es2020",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"jsx": "react",
		"lib": ["es2019", "dom"],
		"types": ["node", "jest"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveSymlinks": true,
		"strict": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts", "styled.d.ts", "assets.d.ts"],
	"exclude": ["node_modules"]
}
