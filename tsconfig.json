{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"outDir": "./dist",
		"target": "es2022",
		"module": "es2022",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"jsx": "react",
		"lib": ["es2022", "dom"],
		"types": ["node", "jest"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveSymlinks": true,
		"strict": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"downlevelIteration": true
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts",
		"styled.d.ts",
		"assets.d.ts",
		".storybook/**/*.ts",
		".storybook/**/*.tsx"
	],
	"exclude": ["node_modules"]
}
