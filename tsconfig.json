{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "target": "es5",
    "module": "ES2015",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "styled.d.ts"],
  "exclude": ["node_modules"]
}
